{
  "dashboard": {
    "id": null,
    "title": "TTL Framework Metrics",
    "tags": ["ttl", "logging", "java", "micrometer"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "TTL Log Status Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "ttl_logs_active_total",
            "legendFormat": "Active Logs"
          },
          {
            "expr": "ttl_logs_expired_total",
            "legendFormat": "Expired Logs"
          },
          {
            "expr": "ttl_logs_bypassed_total",
            "legendFormat": "Bypassed Logs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "TTL Logs by Level",
        "type": "piechart",
        "targets": [
          {
            "expr": "ttl_logs_active_total",
            "legendFormat": "{{level}} - Active"
          },
          {
            "expr": "ttl_logs_expired_total",
            "legendFormat": "{{level}} - Expired"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "pie"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "TTL Operations Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(ttl_override_operations_total[5m])",
            "legendFormat": "Override Operations/sec"
          },
          {
            "expr": "rate(ttl_configuration_changes_total[5m])",
            "legendFormat": "Configuration Changes/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "TTL Configuration Counts",
        "type": "gauge",
        "targets": [
          {
            "expr": "ttl_configs_active_count",
            "legendFormat": "Active Configurations"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "displayMode": "gauge"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "TTL Validation Performance",
        "type": "histogram",
        "targets": [
          {
            "expr": "rate(ttl_validation_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "histogram"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 16,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "TTL Override Operations by Type",
        "type": "barchart",
        "targets": [
          {
            "expr": "ttl_override_operations_total",
            "legendFormat": "{{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "bars"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
